<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll_view_contact_us" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/contact_us_map"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:name="com.google.android.gms.maps.SupportMapFragment" />

            <TextView
                android:text="Contact Us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="255dp"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:layout_below="@id/contact_us_map"
                android:id="@+id/contact_us_title" />

            <TextView
                android:text="UNK Alumni Association"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="280dp"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"
                android:layout_below="@id/contact_us_title"
                android:id="@+id/location_title" />

            <TextView
                android:text="(308) 698-5271"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="310dp"
                android:layout_marginLeft="10dp"
                android:autoLink="phone"
                android:textSize="14sp"
                android:layout_below="@id/location_title"
                android:id="@+id/location_phone_number" />

            <TextView
                android:text="214 W 39th St.\nKearney, NE 68845"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="350dp"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:autoLink="map"
                android:layout_below="@id/location_phone_number"
                android:id="@+id/location_address" />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>