<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll_view_home" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/linear_view_home">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:id="@+id/home_page_image" />

            <Button
                android:text="Welcome"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/welcome_button"
                android:layout_marginTop="3dp"
                android:layout_gravity="center_horizontal"
                android:onClick="buttonClicked" />

            <Button
                android:text="Register/Login"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/register_login_button"
                android:layout_marginTop="3dp"
                android:layout_gravity="center_horizontal"
                android:onClick="buttonClicked" />

            <Button
                android:text="Traditions"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/traditions_button"
                android:layout_marginTop="3dp"
                android:layout_gravity="center_horizontal"
                android:onClick="buttonClicked" />

            <Button
                android:text="UNK Alumni Info"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/unk_alumni_button"
                android:layout_marginTop="3dp"
                android:layout_gravity="center_horizontal"
                android:onClick="buttonClicked" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>